{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": false,
    "outDir": "dist",
  },
  "paths": {
      "@src/*": ["src/*"],
  }, 
  "types": [
    // ... your other types
    "node",
    "jest"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "README.md"
  ]
}